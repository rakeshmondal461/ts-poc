{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2015",
    "lib": ["es2015", "DOM"],

    /* Modules */
    "module": "esnext", // Changed from "None" to "esnext" to enable ES modules
    "moduleResolution": "node", // Added to ensure proper module resolution
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "noEmitOnError": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"] // Ensure all files in src/ are included
}